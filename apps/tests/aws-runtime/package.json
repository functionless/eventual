{
  "name": "tests-runtime",
  "type": "module",
  "version": "0.0.0",
  "main": "lib/test-service.js",
  "scripts": {
    "test:runtime": "OUTPUTS_FILE=cdk.out/outputs.json jest --passWithNoTests",
    "deploy:runtime": "OUTPUTS_FILE=cdk.out/outputs.json ./scripts/deploy",
    "test:runtime-deploy": "pnpm -r --filter tests-runtime run deploy:runtime && pnpm -r --filter tests-runtime run test:runtime"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.214.0",
    "@aws-sdk/client-lambda": "^3.213.0",
    "@aws-sdk/client-s3": "^3.213.0",
    "@aws-sdk/client-sqs": "^3.213.0",
    "@aws-sdk/lib-dynamodb": "^3.214.0",
    "@eventual/aws-runtime": "workspace:^",
    "@eventual/core": "workspace:^",
    "@aws-sdk/credential-providers": "^3.218.0"
  },
  "devDependencies": {
    "@eventual/compiler": "workspace:^",
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^29",
    "@types/node": "^16",
    "esbuild": "^0.15.16",
    "jest": "^29",
    "ts-jest": "^29",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
