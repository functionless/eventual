{
  "name": "tests-runtime",
  "type": "module",
  "version": "0.0.0",
  "main": "lib/test-service.js",
  "scripts": {
    "test:runtime": "pnpm run localstack:start && pnpm run cdk:deploy && jest --passWithNoTests",
    "localstack:start": "echo hi && ./localstack",
    "cdk:deploy": "./deploy"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.214.0",
    "@aws-sdk/client-lambda": "^3.213.0",
    "@aws-sdk/client-s3": "^3.213.0",
    "@aws-sdk/client-sqs": "^3.213.0",
    "@aws-sdk/lib-dynamodb": "^3.214.0",
    "@eventual/aws-runtime": "workspace:^",
    "@eventual/core": "workspace:^"
  },
  "devDependencies": {
    "@eventual/compiler": "workspace:^",
    "@types/aws-lambda": "^8.10.108",
    "@types/jest": "^29",
    "@types/node": "^16",
    "esbuild": "^0.15.16",
    "jest": "^29",
    "ts-jest": "^29",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.3"
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "ts-jest",
        {
          "tsconfig": "tsconfig.json",
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/test/?(*.)+(spec|test).[jt]s?(x)"
    ]
  }
}
