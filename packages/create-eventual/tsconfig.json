{
  "extends": "../../tsconfig-base",
  "compilerOptions": {
    "outDir": "lib",
    "declaration": true,
    "inlineSourceMap": true,
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "stripInternal": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"],
  "references": [{ "path": "../@eventual/project" }]
}
