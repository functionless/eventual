{
  "extends": "../../../tsconfig-base",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "outDir": "lib",
    "declaration": true,
    "inlineSourceMap": true,
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"],
  "references": [{ "path": "../core" }]
}
