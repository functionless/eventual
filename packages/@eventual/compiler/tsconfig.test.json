{
  "extends": "../../../tsconfig-base",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "inlineSourceMap": true,
    "rootDir": ".",
    "types": ["@types/node", "@types/jest"],
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "noEmit": true
  },
  "include": ["src", "test"],
  "exclude": ["lib", "node_modules"],
  "references": [{ "path": "../core" }]
}
