{
  "extends": "../../../tsconfig-base",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "lib/esm",
    "declaration": true,
    "inlineSourceMap": true,
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "paths": {
      "@eventual/injected/*": ["./src/injected/*"]
    }
  },
  "include": ["src"],
  "exclude": ["lib", "node_modules"],
  "references": [{ "path": "../core" }]
}
