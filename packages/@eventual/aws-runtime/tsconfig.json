{
  "extends": "../../../tsconfig-base",
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "outDir": "lib/esm",
    "declaration": true,
    "inlineSourceMap": true,
    "rootDir": "src",
    "typeRoots": ["./node_modules/@types"],
    "allowJs": true,
    "paths": {
      "@eventual/injected/*": ["./src/injected/*"]
    }
  },
  "include": ["src", "src/package.json", "../core/src/execution-id.ts"],
  "exclude": ["lib", "node_modules"],
  "references": [{ "path": "../core" }]
}
